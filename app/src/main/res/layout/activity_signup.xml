<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="43dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/g10" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/yeonsung_regular"
        android:text="FlavorFiesta"
        android:textColor="#000000"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_bold"
        android:text="Sign Up Here For Your\n
Admin Dashboard"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="42dp"
        android:layout_marginRight="24dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconDrawable="@drawable/arrow_circle_down"
        app:endIconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <AutoCompleteTextView
            android:id="@+id/listOfLoc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fontFamily="@font/lato_regular"
            android:inputType="none"
            android:text="Choose Location"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/email"
        android:layout_width="357dp"
        android:layout_height="57dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/textfeild_border"
        android:drawableLeft="@drawable/mail"
        android:drawablePadding="9dp"
        android:elevation="5dp"
        android:ems="10"
        android:fontFamily="@font/yeonsung_regular"
        android:hint="Email or Phone Number"
        android:inputType="textEmailAddress"
        android:paddingLeft="7dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/restroName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/restroName"
        app:layout_constraintTop_toBottomOf="@+id/restroName" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="357dp"
        android:layout_height="57dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/textfeild_border"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="9dp"
        android:elevation="5dp"
        android:ems="10"
        android:fontFamily="@font/yeonsung_regular"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="7dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_btn"
        android:layout_width="152dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_bckgrnd"
        android:fontFamily="@font/yeonsung_regular"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pass"
        app:layout_constraintStart_toStartOf="@+id/pass"
        app:layout_constraintTop_toBottomOf="@+id/pass" />

    <TextView
        android:id="@+id/alredy_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_regular"
        android:text="Already Have An Account?"
        android:textColor="@color/text_color"
        app:layout_constraintEnd_toEndOf="@+id/signup_btn"
        app:layout_constraintStart_toStartOf="@+id/signup_btn"
        app:layout_constraintTop_toBottomOf="@+id/signup_btn" />

    <EditText
        android:id="@+id/nameOwner"
        android:layout_width="357dp"
        android:layout_height="57dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/textfeild_border"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="9dp"
        android:elevation="5dp"
        android:ems="10"
        android:fontFamily="@font/yeonsung_regular"
        android:hint="Name of Owner"
        android:inputType="text"
        android:paddingLeft="7dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <EditText
        android:id="@+id/restroName"
        android:layout_width="357dp"
        android:layout_height="57dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/textfeild_border"
        android:drawableLeft="@drawable/home_icon"
        android:drawablePadding="9dp"
        android:elevation="5dp"
        android:ems="10"
        android:fontFamily="@font/yeonsung_regular"
        android:hint="Name of Restorant"
        android:inputType="text"
        android:paddingLeft="7dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/nameOwner"
        app:layout_constraintStart_toStartOf="@+id/nameOwner"
        app:layout_constraintTop_toBottomOf="@+id/nameOwner" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/lato_bold"
        android:text="Choose Your Location "
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
